# MongoDB数据库配置
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password
MONGODB_HOST=38.19.66.199
MONGODB_PORT=27017
MONGODB_AUTH_SOURCE=admin
MONGODB_DATABASE=newsnow

# 应用运行模式
DEBUG=false
ENVIRONMENT=production

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/newsnow.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# 调度器配置
FETCH_INTERVAL=300  # 新闻获取间隔（秒），默认5分钟
MAX_NEWS_PER_SOURCE=500  # 每个新闻源最大获取条数
MAX_CONCURRENT_SOURCES=10  # 最大并发新闻源数量
BATCH_SIZE=5  # 批处理大小
BATCH_DELAY=1  # 批次间延迟（秒）
FETCH_ON_START=true  # 启动时是否立即获取一次新闻

# 数据清理配置
CLEANUP_ENABLED=true  # 是否启用数据清理
CLEANUP_TIME=02:00  # 清理时间（24小时制）
DATA_RETENTION_DAYS=180  # 数据保留天数

# 网络配置
REQUEST_TIMEOUT=10  # 请求超时时间（秒）
MAX_RETRIES=3  # 最大重试次数
RETRY_DELAY=2  # 重试延迟（秒）
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# 代理配置（可选）
PROXY_ENABLED=true
PROXY_ROTATION=true
PROXY_LIST=http://38.19.66.199:7890,http://8.138.227.99:6080
PROXY_TEST_URL=https://httpbin.org/ip
PROXY_TEST_ON_START=true

# 启用的新闻源（可选，不设置则启用所有源）
# ENABLED_SOURCES=hackernews,zhihu,weibo,36kr,github