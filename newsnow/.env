# NewsNow Python 版本配置文件
# 基础配置，可根据需要修改

# MongoDB 数据库配置
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=NewsNow
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password
AUTH_SOURCE=admin

# 调度器配置
FETCH_INTERVAL=300
MAX_NEWS_PER_SOURCE=100
FETCH_ON_START=true

# 并发获取
MAX_CONCURRENT_SOURCES=20

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/newsnow.log

# 代理配置
PROXY_ENABLED=true
PROXY_LIST=http://127.0.0.1:7890,http://8.138.227.99:6080
PROXY_ROTATION=true
PROXY_TEST_URL=https://httpbin.org/ip
PROXY_TEST_ON_START=true

# 运行模式
DEBUG=false
ENVIRONMENT=development